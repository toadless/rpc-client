<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldWhite([) %blue(%d{HH:mm:ss.SSS}) %boldWhite(]) %boldWhite([) %blue(%logger{0}) %boldWhite(]) %boldWhite([) %blue(%level) %boldWhite(]:) %blue(%msg) %n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>